#!/usr/bin/env bash
# Default linter entrypoint used by some CI systems.
# Runs Flutter analyzer inside the nested Flutter app.
set -euo pipefail

APP_DIR="booknest-mobile-app-40323-40332/booknest_mobile_frontend"
if [ ! -d "$APP_DIR" ]; then
  echo "[.lint] ERROR: Flutter app directory not found: $APP_DIR" >&2
  exit 1
fi

cd "$APP_DIR"
flutter pub get
flutter analyze
